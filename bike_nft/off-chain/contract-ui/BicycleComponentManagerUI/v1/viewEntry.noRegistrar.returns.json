{
  "elements": [
    {
      "type": "text",
      "label": "Hi, friend! What would you like to do?"
    },
    {
      "type": "input",
      "label": "Query or register a serial number (leave blank to see an example):",
      "id": "registerSerialNumber",
      "placeholder": "Serial Number, e.g. SN-1234"
    },
    {
      "type": "button",
      "label": "Continue",
      "onClick": {
        "default": "viewIsNewSerialNumber"
      }
    },
    {
      "type": "input",
      "label": "Change your public account info (requires a transaction):",
      "id": "userAddressInfo",
      "placeholder": "E.g., name or email"
    },
    {
      "type": "button",
      "label": "Save",
      "onClick": {
        "default": "updateUserAddressInfo",
        "success": "viewUserAddressInfoUpdateSuccess",
        "failure": "viewUserAddressInfoUpdateFailure"
      }
    }
  ]
}
