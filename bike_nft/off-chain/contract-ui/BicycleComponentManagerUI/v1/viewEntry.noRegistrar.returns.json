{
  "elements": [
    {
      "type": "text",
      "label": "Hi, friend! What would you like to do?"
    },
    {
      "type": "input",
      "label": "Query or register a serial number (leave blank to see an example):",
      "id": "registerSerialNumber",
      "placeholder": "Serial Number, e.g. SN-1234"
    },
    {
      "type": "button",
      "label": "Continue with this serial number...",
      "onClick": {
        "default": "viewIsNewSerialNumber"
      }
    },
    {
      "type": "input",
      "label": "Update your public account info:",
      "id": "userAddressInfo",
      "readonly": true
    },
    {
      "type": "button",
      "label": "Update it...",
      "onClick": {
        "default": "viewUpdateUserAddressInfo"
      }
    }
  ]
}
