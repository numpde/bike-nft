{
  "elements": [
    {
      "type": "input",
      "label": "Updating the address/account info requires a transaction to be sent to the blockchain. You can pay yourself or use the 'ops fund'. The number of pre-paid transactions you can do :",
      "id": "userOpsBalance",
      "readOnly": true
    },
    {
      "type": "address",
      "label": "Address to update the info of:",
      "id": "infoAddress"
    },
    {
      "type": "input",
      "label": "Type the new address info:",
      "id": "addressInfo"
    },
    {
      "type": "button",
      "label": "Update info",
      "onClick": {
        "default": "updateAddressInfo",
        "success": "viewUpdateAddressInfoOnSuccess",
        "gasless": true
      }
    },
    {
      "type": "button",
      "label": "Start over",
      "onClick": {
        "default": "viewEntry"
      }
    }
  ]
}
